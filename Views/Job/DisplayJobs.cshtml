<br>
<h1>Jobs List</h1>
<a href="/Job/AddJobs" class="btn btn-primary" role="button">Add Jobs</a>
<table class="table">
    <thead>
        <tr>
            <th>Job Id</th>
            <th>Job Name</th>
            <th>Job Description</th>
            <th>Salary(LPA)</th>
            <th>Company Name</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Job job in (List<Job>)ViewBag.JobList)
        {
            <tr>
                <td>@job.JobId</td>
                <td>@job.JobName</td>
                <td>@job.JobDescription</td>
                <td>@job.JobSalary</td>
                <td>@job.CompanyName</td>
                <td> <button class="btn btn-danger btn-sm"  onclick='myDelete("/Job/Delete/@job.JobId","@job.JobId")'>delete</button>  </td>
                <td> <a class="btn btn-primary btn-sm" role="button"  href="/Job/Edit/@job.JobId">Edit</a>  </td>
            </tr>
        }
    </tbody>

</table>

<script>
    function myDelete(link, id) {
        let text = "Are you sure you want to delete book " + id + " ?";
        let _link = link;
        if (confirm(text) == true) {

            window.open(link, '_self');
        }
    }
</script>